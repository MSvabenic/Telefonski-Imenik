@model Models.ViewModels.GradViewModel
@{
    ViewBag.Title = "Dodaj grad";
}

<h2>Dodaj grad</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form class="form-horizontal" id="forma1" name="forma1" enctype="multipart/form-data">
                <div class:"form-group">
                    @Html.ValidationMessageFor(m => m.Naziv, "", new { @class = "text-danger" }) <br />
                    @Html.LabelFor(m => m.Naziv)
                    @Html.TextBoxFor(m => m.Naziv, new { id = "nazivGrada", @class = "form-control", Value = "" })
                </div>
                <div class:"form-group">
                    @Html.LabelFor(m => m.Opis)
                    @Html.TextAreaFor(m => m.Opis, new { id = "opisGrada", @class = "form-control", Value = "" })
                </div>
                <button id="btn1" name="spremi" type="submit" class="btn btn-primary">Spremi</button>
            </form>
        </div>
        <div class="col-lg-6">
            <img src="~/Content/Slike/grad.jpg" class="img-thumbnail" />
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Custom/DodajGrad.js"></script>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}